<h1>Posts in the <%= @topic.title %> topic</h1>
<div class="span4">
    <% if can? :create, Post %>
    <%= link_to "Add link", new_topic_post_path(@topic), class: 'btn btn-primary btn-mini' %>
    <% end %>
  </div>
  <p>

<div class="media-body">
  <%= render partial: '/topics/posts/post', collection: @posts %>
</div>

    <% if can? :update, @topic %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-large btn-block btn-warning' %>
    <% end %>
    
    <% if can? :destroy, @topic %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-large btn-block btn-danger', confirm: 'Are you sure you want to delete this topic?' %>
    <% end %>


  

