<h1>All Topics</h1>
<% if can? :create, Topic %>
  <%= link_to "Add topic", new_topic_path, class: 'btn btn-primary btn-mini' %>
 <% end %> 
<% @topics.each do |topic| %>
  <div class="media">
    <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.title, topic %>
        </h4>
        <small>
          submitted <%= time_ago_in_words(topic.created_at) %> ago by <%= link_to topic.user.email if topic.user %>
        </small>
      </div>
    </div>
<% end %>
