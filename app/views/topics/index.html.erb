<h1>All Topics</h1>
<% if can? :create, Topic %>
  <%= link_to "Add topic", new_topic_path, class: 'btn btn-primary btn-mini' %>
 <% end %> 
<% @topics.each do |topic| %>
  <div class="media">
    <div class="media-body">
        <h4 class="media-heading">
          <%= link_to topic.title, topic %>
        </h4>
      </div>
    </div>
<% end %>
