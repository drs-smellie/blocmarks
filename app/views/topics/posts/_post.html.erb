<div class="row">
  <div class="col-md-3">
    <div class="thumbnail">
      <a href="<%= post.url %>" class="thumbnail"><%= post.url %></a>
      <p>
      </p>
        <small>
          submitted <%= time_ago_in_words(post.created_at) %> ago by <%= link_to post.user.email %><br/>
        </small>
        <p></p>
        <%= render partial: '/favorites/favorite', locals: { topic: @topic, post: post } %>
  </div>
</div>
